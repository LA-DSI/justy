{
  "name": "justy",
  "version": "1.0.0",
  "main": "src/main.js",
  "license": "MIT",
  "description": "To Do App",
  "repository": {
    "type": "Github",
    "url": "https://github.com/olek-arsee/justy"
  },
  "author": {
    "name": "Arsee Projects",
    "email": "projects@arsee.pl"
  },
  "keywords": [
    "Justy",
    "TODO",
    "TODO App",
    "To Do",
    "To Do App",
    "Electron"
  ],
  "build": {
    "appId": "com.electron.justy",
    "productName": "Justy",
    "publish": [
      {
        "provider": "github",
        "owner": "olek-arsee",
        "repo": "justy"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${name}.${ext}",
      "icon": "assets/build/icon.ico"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "icon": "assets/build/icon.icns"
    },
    "dmg": {
      "background": "assets/build/dmg.png",
      "artifactName": "${name}.${ext}",
      "window": {
        "width": "600",
        "height": "500"
      },
      "contents": [
        {
          "x": 10,
          "y": 215,
          "type": "file"
        },
        {
          "x": 420,
          "y": 215,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "icon": "assets/build/icon.icns",
      "synopsis": "To Do App",
      "artifactName": "${name}.${ext}",
      "desktop": {
        "Name": "Just"
      },
      "target": [
        "deb",
        "rpm",
        "pacman",
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "electron-updater": "^4.6.1"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:aur": "electron-builder -l pacman",
    "publish:linux": "electron-builder -l -p always",
    "publish:windows": "electron-builder -w -p always",
    "publish:mac": "electron-builder -m -p always"
  },
  "devDependencies": {
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "^2.5.1"
  }
}
